<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="298dp"
                    android:layout_height="222dp"
                    android:layout_marginTop="108dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icono" />

                <EditText
                    android:id="@+id/inputLoginUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="376dp"
                    android:background="@drawable/custom_input"
                    android:drawableLeft="@drawable/custom_email"
                    android:drawablePadding="12dp"
                    android:ems="12"
                    android:hint="Usuario"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textColor="#0a0655"
                    android:textColorHint="#0a0655"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/inputLoginPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="436dp"
                    android:background="@drawable/custom_input"
                    android:drawableLeft="@drawable/customa_lock"
                    android:drawablePadding="12dp"
                    android:ems="12"
                    android:hint="ContraseÃ±a"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="#0a0655"
                    android:textColorHint="#0a0655"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.506"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="334dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="496dp"
                    android:backgroundTint="#0a0655"
                    android:text="Login"
                    android:textSize="28sp"
                    app:iconTint="#0a0655"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.506"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>